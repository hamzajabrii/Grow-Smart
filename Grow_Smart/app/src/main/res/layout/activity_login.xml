<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/bgk">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/txtLoginSignIn"
        android:hint="Adresse email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/input_login"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/txtPasswordSignIn"
        android:hint="***************"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_login"
        android:textAlignment="center"
        android:layout_below="@+id/txtLoginSignIn"
        android:password="true"
        />
    <Button
        android:id="@+id/btnIdenifier"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtPasswordSignIn"
        android:layout_marginTop="10dp"
        android:text="S'identifier"
        android:background="@drawable/costum_button"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouveau sur GrowSmart ?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnIdenifier"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/btnNvCompte"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtView"
        android:text="CrÃ©ez un compte"
        android:background="@drawable/btn_nv_compte"
        android:textColor="	#0040ff"
        android:layout_marginTop="10dp"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pgBar"
        android:layout_below="@+id/btnIdenifier"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="@style/Theme.AppCompat.CompactMenu"/>

    <TextView
        android:id="@+id/txtTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se connecter via Email"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>