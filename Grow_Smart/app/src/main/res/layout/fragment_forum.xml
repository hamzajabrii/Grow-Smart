<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForumFragment"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notre forum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <ListView
        android:layout_marginTop="50dp"
        android:id="@+id/lstArticle"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/txtForum"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lstArticle"
        android:layout_alignEnd="@+id/lstArticle"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="-71dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/add" />

</RelativeLayout>