<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment"
    android:padding="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/cdView"
        >

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/txtNv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NouveautÃ©s"
                android:textSize="30dp"
                android:layout_marginBottom="2dp"
                />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img"
                android:layout_below="@+id/txtNv"
                />
            <TextView
                android:layout_alignBottom="@id/img"
                android:layout_marginTop="55dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C'est une actualite"
                android:textSize="75px"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_below="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have a range of courses to teach you Android app development,
        from your first app to advanced topics."
                android:paddingBottom="15dp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btnDeconnecter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdView"
        android:text="Deconnecter"/>

</RelativeLayout>